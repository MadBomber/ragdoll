# frozen_string_literal: true

source "https://rubygems.org"

gemspec

gem "pg"        # Pg is the Ruby interface to the PostgreSQL RDBMS
gem "pgvector"  # pgvector support for Ruby

gem "ruby_llm"  # A single delightful Ruby way to work with AI.

gem "pdf-reader"  # A library for accessing the content of PDF files
gem "docx"        # a ruby library/gem for interacting with .docx files
gem "rubyzip"     # rubyzip is a ruby module for reading and writing zip files

gem "activejob"     # Job framework with pluggable queues.
gem "activerecord"  # Object-relational mapper framework (part of Rails).
gem "rmagick"       # Ruby binding to ImageMagick
gem "shrine"        # Toolkit for file attachments in Ruby applications

gem "neighbor"         # Nearest neighbor search for Rails
gem "opensearch-ruby"  # Ruby Client for OpenSearch
gem "searchkick"       # Intelligent search made easy with Rails and Elasticsearch or OpenSearch

gem 'ruby-progressbar' # Ruby/ProgressBar is a flexible text progress bar library for Ruby.

group :development, :test do
  gem "annotate"                        # Annotates Rails Models, routes, fixtures, and others based on the database schema.
  gem "database_cleaner-active_record"  # Strategies for cleaning databases using ActiveRecord. Can be used to ensure a clean state for testing.
  gem "bundler"                         # The best way to manage your application's dependencies
  gem "debug_me"                        # A tool to print the labeled value of variables.
  gem "minitest"                        # minitest provides a complete suite of testing facilities supporting TDD, BDD, mocking, and benchmarking
  gem "rake"                            # Rake is a Make-like program implemented in Ruby
  gem "rubocop"                         # Automatic Ruby code style checking tool.
  gem "rubocop-minitest"                # Automatic Minitest code style checking tool.
  gem "rubocop-rake"                    # A RuboCop plugin for Rake
  gem "simplecov"                       # Code coverage for Ruby
  gem "undercover"                      # Actionable code coverage - detects untested code blocks in recent changes
end
